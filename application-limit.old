server:
  port: 9098
spring:
  application:
    name: sign-service
  redis:
    host: localhost
    port: 6379
    database: 0
    timeout: 20
  cloud:
    gateway:
      routes:
        - id: route-customer
          uri: http://127.0.0.1:9045/
          predicates:
            - Path=/cus/**
          filters:
            - StripPrefix=1
            - CustomerFilterFactory=true
            - name: RequestRateLimiter
              args:
                redis-rate-limiter.replenishRate: 5
                redis-rate-limiter.burstCapacity: 10
                key-resolver: "#{@apiKeyResolver}"

        - id: route-zxj
          uri: http://www.zxj.com/
          predicates:
            - Path=/zxj/**
          filters:
            - RewritePath=/zxj/(?<segment>.*), /$\{segment}
            - CustomerFilterFactory=true